{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "n8n",
  "title": "n8n",
  "description": "n8n Workflow launcher and utilities",
  "icon": "n8n.png",
  "author": "DesignLogicSolutions",
  "categories": [
    "Web",
    "Developer Tools"
  ],
  "license": "MIT",
  "permissions": [
    "clipboard-read"
  ],
  "preferences": [
    {
      "name": "instances",
      "type": "array",
      "required": true,
      "title": "n8n Instances",
      "description": "Configure your n8n instances",
      "default": [],
      "items": {
        "type": "object",
        "required": [
          "name",
          "baseUrl",
          "apiKey"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "Instance Name",
            "description": "A name to identify this n8n instance",
            "placeholder": "Production"
          },
          "baseUrl": {
            "type": "string",
            "title": "Base URL",
            "description": "The n8n instance URL (e.g., https://n8n.example.com)",
            "placeholder": "https://n8n.example.com"
          },
          "apiKey": {
            "type": "password",
            "title": "API Key",
            "description": "The n8n API key for authentication",
            "placeholder": "Enter your n8n API key"
          },
          "color": {
            "type": "string",
            "title": "Instance Color",
            "description": "Color to distinguish this instance (optional)",
            "placeholder": "#FF0000"
          }
        }
      }
    }
  ],
  "commands": [
    {
      "name": "convert-json-mapping",
      "title": "Convert JSON to Manual Mapping",
      "description": "Convert Set node JSON output format to Manual Mapping assignments",
      "mode": "view",
      "keywords": [
        "n8n",
        "json",
        "set",
        "node",
        "convert",
        "manual",
        "mapping"
      ]
    },
    {
      "name": "convert-manual-mapping",
      "title": "Convert Manual Mapping to JSON",
      "description": "Convert Set node Manual Mapping assignments to JSON output format",
      "mode": "view",
      "keywords": [
        "n8n",
        "json",
        "set",
        "node",
        "convert",
        "manual",
        "mapping"
      ]
    },
    {
      "name": "search-workflows",
      "title": "Search Workflows",
      "description": "Search and manage your n8n workflows",
      "mode": "view",
      "keywords": [
        "n8n",
        "workflow",
        "search",
        "find",
        "list"
      ]
    },
    {
      "name": "create-workflow",
      "title": "Create Workflow",
      "description": "Create a new n8n workflow",
      "mode": "no-view",
      "arguments": [
        {
          "name": "name",
          "placeholder": "Workflow Name",
          "type": "text",
          "required": true
        },
        {
          "name": "instance",
          "placeholder": "Instance Name",
          "type": "text",
          "required": false
        }
      ],
      "keywords": [
        "n8n",
        "workflow",
        "create",
        "new"
      ]
    },
    {
      "name": "create-webhook",
      "title": "Create Webhook",
      "description": "Convert curl command to n8n webhook JSON",
      "mode": "view",
      "keywords": [
        "curl",
        "webhook",
        "n8n",
        "convert",
        "http"
      ]
    },
    {
      "name": "parse-webhook",
      "title": "Parse Webhook",
      "description": "Convert n8n webhook JSON to curl command",
      "mode": "view",
      "keywords": [
        "curl",
        "webhook",
        "n8n",
        "json",
        "convert",
        "http"
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.96.0",
    "@raycast/utils": "^1.19.1",
    "change-case": "^5.4.4",
    "node-fetch": "^3.3.2",
    "parse-curl": "^0.2.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron/get": "^4.0.0",
    "@raycast/eslint-config": "^1.0.11",
    "@types/change-case": "^2.3.5",
    "@types/jest": "^29.5.14",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "@types/uuid": "^9.0.8",
    "electron": "^35.2.0",
    "eslint": "^8.57.0",
    "ip": "^2.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "react-devtools": "^6.1.1",
    "rimraf": "^6.0.1",
    "tough-cookie": "^5.1.2",
    "ts-jest": "^29.3.2",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  }
}
